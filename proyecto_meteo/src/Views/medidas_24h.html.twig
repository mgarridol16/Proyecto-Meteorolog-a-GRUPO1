{% extends "base.html.twig" %}

{% block content %}
<div class="container mt-5">
    <div class="d-flex align-items-center mb-4">
        <div class="p-3 bg-primary bg-opacity-75 rounded-circle me-3 shadow-sm">
            <i class="fa-solid fa-chart-line text-white fa-lg"></i>
        </div>
        <div>
            <h2 class="fw-bold mb-0 text-dark" style="letter-spacing: -0.5px;">Monitor de Medidas</h2>
            <p class="text-muted small mb-0 fw-bold">REGISTRO DE LAS ÚLTIMAS 24 HORAS</p>
        </div>
    </div>
    
    {# Tarjetas alineadas con colores lógicos #}
    <div class="row g-3 mb-5">
        
        {# Temperatura - Amarillo Sol #}
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-warning bg-opacity-10 h-100" style="border-top: 4px solid #ffc107 !important;">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h6 class="text-warning text-dark fw-bold small text-uppercase mb-2">
                        <i class="fa-solid fa-sun me-2"></i>Temperatura
                    </h6>
                    <p class="h2 mb-2 fw-bold text-dark">{{ estadisticas.temp_promedio|number_format(1) }}°C</p>
                    <div class="mt-auto">
                        <span class="badge bg-white text-primary border border-primary-subtle">{{ estadisticas.temp_minima|number_format(1) }}°</span>
                        <span class="badge bg-white text-danger border border-danger-subtle">{{ estadisticas.temp_maxima|number_format(1) }}°</span>
                    </div>
                </div>
            </div>
        </div>

        {# Lluvia - Azul Agua #}
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-primary bg-opacity-10 h-100" style="border-top: 4px solid #0d6efd !important;">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h6 class="text-primary fw-bold small text-uppercase mb-2">
                        <i class="fa-solid fa-droplet me-2"></i>Lluvia
                    </h6>
                    <p class="h2 mb-2 fw-bold text-dark">{{ estadisticas.lluvia_total|default(0)|number_format(1) }} <small class="h6">l/m²</small></p>
                    <div class="mt-auto text-primary small fw-bold">Acumulado total</div>
                </div>
            </div>
        </div>

        {# Humedad - Cian #}
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-info bg-opacity-10 h-100" style="border-top: 4px solid #0dcaf0 !important;">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h6 class="text-info text-dark fw-bold small text-uppercase mb-2">
                        <i class="fa-solid fa-water me-2"></i>Humedad
                    </h6>
                    <p class="h2 mb-2 fw-bold text-dark">{{ estadisticas.humedad_promedio|number_format(0) }}%</p>
                    <div class="mt-auto mx-auto" style="width: 80%;">
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-info" style="width: {{ estadisticas.humedad_promedio }}%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Viento - Gris Aire #}
        <div class="col-md-3">
            <div class="card shadow-sm border-0 bg-secondary bg-opacity-10 h-100" style="border-top: 4px solid #6c757d !important;">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h6 class="text-secondary fw-bold small text-uppercase mb-2">
                        <i class="fa-solid fa-wind me-2"></i>Viento
                    </h6>
                    <p class="h2 mb-2 fw-bold text-dark">{{ estadisticas.viento_promedio|number_format(1) }} <small class="h6">km/h</small></p>
                    <div class="mt-auto text-secondary small fw-bold">Velocidad media</div>
                </div>
            </div>
        </div>
    </div>

    {# Historial Detallado #}
    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3 border-bottom">
            <span class="fw-bold text-secondary text-uppercase small"><i class="fa-solid fa-bars-staggered me-2"></i>Historial de Medidas</span>
            <span class="badge bg-light text-dark border fw-normal">{{ datos|length }} registros</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3 text-muted small text-start">FECHA Y HORA</th>
                        <th class="text-muted small">TEMP.</th>
                        <th class="text-muted small">PRESIÓN</th>
                        <th class="text-muted small">HUMEDAD</th>
                        <th class="text-muted small">VIENTO</th>
                        <th class="text-muted small">LLUVIA</th>
                    </tr>
                </thead>
                <tbody>
                    {% for dato in datos %}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary text-start">{{ dato.fechaSistema|date("d/m/Y H:i") }}</td>
                        <td class="{{ dato.temperatura > 20 ? 'text-danger fw-bold' : 'text-primary' }}">
                            {{ dato.temperatura|number_format(1) }}°C
                        </td>
                        <td>{{ dato.presion|number_format(0) }} <small class="text-muted">mbar</small></td>
                        <td>
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="progress flex-grow-1 me-2" style="height: 6px; max-width: 50px;">
                                    <div class="progress-bar bg-info" style="width: {{ dato.humedad }}%"></div>
                                </div>
                                <span class="small">{{ dato.humedad }}%</span>
                            </div>
                        </td>
                        <td>{{ dato.viento|number_format(1) }} <small class="text-muted">km/h</small></td>
                        <td>
                            {% if dato.lluvia > 0 %}
                                <span class="badge rounded-pill bg-primary bg-opacity-75">{{ dato.lluvia|number_format(1) }}</span>
                            {% else %}
                                <span class="text-muted small">-</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}