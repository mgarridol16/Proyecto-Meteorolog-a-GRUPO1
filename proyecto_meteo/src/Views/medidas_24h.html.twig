{% extends "base.html.twig" %}

{% block content %}

<div class="container mt-5">
    <h1 class="text-center mb-4">{{ titulo }}</h1>
    
    <h2 class="mb-3">Datos de las Últimas 24 Horas</h2>
    
    {% if datos|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Fecha Sistema</th>
                    <th>Temperatura (°C)</th>
                    <th>Humedad (%)</th>
                    <th>Presión</th>
                    <th>Viento</th>
                    <th>Lluvia</th>
                </tr>
            </thead>
            <tbody>
                {% for dato in datos %}
                <tr>
                    <td>{{ dato.fechaSistema }}</td>
                    <td>{{ dato.temperatura }}</td>
                    <td>{{ dato.humedad }}</td>
                    <td>{{ dato.presion }}</td>
                    <td>{{ dato.viento }}</td>
                    <td>{{ dato.lluvia }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="alert alert-warning text-center">
        No hay datos disponibles para las últimas 24 horas
    </div>
    {% endif %}
</div>

{% endblock %}