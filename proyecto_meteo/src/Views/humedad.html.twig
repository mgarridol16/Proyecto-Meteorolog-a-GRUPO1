{% extends "base.html.twig" %}

{% block content %}
<div class="container py-5">

  <div class="card shadow-sm">

    <!-- Header -->
    <div class="card-header bg-white">
      <h5 class="mb-0 fw-semibold text-center">
        ðŸ“Š Registro de Humedad
      </h5>
    </div>

    <div class="card-body">

      <!-- Chart -->
      <div class="mb-4">
        <canvas id="humedadChart" height="120"></canvas>
      </div>

      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-hover align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th scope="col">Fecha</th>
              <th scope="col">Humedad (%)</th>
            </tr>
          </thead>
          <tbody>
            {% for dato in datos %}
              <tr
                data-fecha="{{ dato.fechaSistema }}"
                data-humedad="{{ dato.humedad }}"
              >
                <td>{{ dato.fechaSistema }}</td>
                <td>
                  <span class="badge bg-primary fs-6">
                    {{ dato.humedad }} %
                  </span>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="2" class="text-muted py-4">
                  No hay datos disponibles
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

    </div>
  </div>

</div>
{% endblock %}
