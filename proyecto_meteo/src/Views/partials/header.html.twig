<script>
	// Marcar la pestaña activa automáticamente
	document.addEventListener('DOMContentLoaded', function() {
		const currentPath = window.location.pathname;
		const navLinks = document.querySelectorAll('#mainNav .nav-link, #mainNav .dropdown-item');
		
		navLinks.forEach(link => {
			const href = link.getAttribute('href');
			if (href && href !== '#' && !href.startsWith('javascript:')) {
				const linkPath = new URL(link.href).pathname;
				
				// Comparar rutas
				if (currentPath === linkPath || 
					(currentPath !== '/' && linkPath !== '/' && currentPath.startsWith(linkPath))) {
					link.classList.add('active');
					
					// Si es un item de dropdown, marcar también el padre
					if (link.classList.contains('dropdown-item')) {
						const parentToggle = link.closest('.dropdown').querySelector('.dropdown-toggle');
						if (parentToggle) parentToggle.classList.add('active');
					}
				}
			}
		});
		
		// Si ninguna está activa y estamos en /, activar "Inicio"
		if (currentPath === '/' && !document.querySelector('#mainNav .nav-link.active')) {
			const inicioLink = document.querySelector('#mainNav .nav-link[href="/"]');
			if (inicioLink) inicioLink.classList.add('active');
		}
	});
</script>

