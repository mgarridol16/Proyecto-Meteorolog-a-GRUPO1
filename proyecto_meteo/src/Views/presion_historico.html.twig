{% extends "base.html.twig" %}
{% block content %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container my-5">
    
    <h1 class="text-center mb-4">
        <i class="bi bi-speedometer2"></i> Histórico de Presión Atmosférica - Últimos 30 días
    </h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-clipboard-data"></i> Última Lectura Registrada
        </div>
        <div class="card-body text-center">
            {% if ultimaPresion %}
                <h2 class="text-primary">{{ ultimaPresion.presion|number_format(2, ',', '.') }} hPa</h2>
                <p class="text-muted">
                    <i class="bi bi-calendar-event"></i> {{ ultimaPresion.fechaSistema|date('d/m/Y H:i') }}
                </p>
                
                <div class="row">
                    <div class="col-md-3">
                        <span class="badge bg-danger">
                            <i class="bi bi-thermometer-half"></i> Temperatura: {{ ultimaPresion.temperatura }}°C
                        </span>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-info">
                            <i class="bi bi-droplet"></i> Humedad: {{ ultimaPresion.humedad }}%
                        </span>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-success">
                            <i class="bi bi-wind"></i> Viento: {{ ultimaPresion.viento }} km/h
                        </span>
                    </div>
                    <div class="col-md-3">
                        <span class="badge bg-primary">
                            <i class="bi bi-cloud-rain"></i> Lluvia: {{ ultimaPresion.lluvia ?? 'N/A' }} mm
                        </span>
                    </div>
                </div>
            {% else %}
                <p class="text-muted">No hay datos disponibles</p>
            {% endif %}
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-graph-up"></i> Evolución de la Presión Atmosférica
        </div>
        <div class="card-body">
            <canvas id="graficoPresion"></canvas>
        </div>
    </div>

    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Los datos mostrados corresponden a las últimas mediciones de presión atmosférica de la estación meteorológica del IES Gregorio Prieto (últimos 30 días).
    </div>
</div>

<script>
    const datosPresion = {{ presiones|json_encode|raw }};
    const ctx = document.getElementById('graficoPresion').getContext('2d');
    
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: datosPresion.map(d => d.fecha),
            datasets: [{
                label: 'Presión (hPa)',
                data: datosPresion.map(d => parseFloat(d.presion)),
                borderColor: '#FF6384',
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderWidth: 2,
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: false
                }
            }
        }
    });
</script>
{% endblock %}